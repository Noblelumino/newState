<!doctype html>
<html
  lang="en"
  data-bs-theme="light"
  data-menu-color="light"
  data-topbar-color="dark"
>
  <head>
    <meta charset="utf-8" />
    <title>File Uploads | Custom File Upload</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="Upload property" name="description" />
    <meta content="Your Company" name="author" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico" />

    <!-- App css -->
    <link href="assets/css/style.min.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
    <!-- Begin page -->
    <div class="layout-wrapper">
      <div class="page-content">
        <div class="px-3">
          <!-- Start Content-->
          <div class="container-fluid">
            <!-- Page Title -->
            <div class="py-3 py-lg-4">
              <div class="row">
                <div class="col-lg-6">
                  <h4 class="page-title mb-0">Add new property</h4>
                </div>
              </div>
            </div>

            <!-- File Upload Form -->
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <h4 class="header-title">Property details</h4>
                    <p class="sub-header">
                      Add property details and upload property images
                    </p>

                    <form
                      action="/addProperty/upload"
                      method="POST"
                      enctype="multipart/form-data"
                      id="fileUploadForm"
                    >
                    
                      <!-- Property Name -->
                      <div class="form-group mb-3">
                        <label class="form-label" for="propertyName"
                          >PROPERTY NAME</label
                        >
                        <input
                          class="form-control"
                          type="text"
                          id="propertyName"
                          name="propertyName"
                          placeholder="Enter the property name"
                          required
                        />
                      </div>

                      <!-- Address -->
                      <div class="form-group mb-3">
                        <label class="form-label" for="address">ADDRESS</label>
                        <input
                          class="form-control"
                          type="text"
                          id="address"
                          name="address"
                          placeholder="Enter the house address"
                          required
                        />
                      </div>

                      <!-- Property Type -->
                      <div class="form-group mb-3">
                        <label class="form-label" for="propertyType"
                          >PROPERTY TYPE</label
                        >
                        <select
                          class="form-control"
                          id="propertyType"
                          name="propertyType"
                        >
                          <option value="house">House</option>
                          <option value="land">Land</option>
                          <option value="shortlets">Shortlets</option>
                        </select>
                      </div>

                      <!-- Amount -->
                      <div class="form-group mb-3">
                        <label class="form-label" for="amount">AMOUNT</label>
                        <input
                          class="form-control"
                          type="number"
                          id="amount"
                          name="amount"
                          placeholder="Enter the amount"
                          required
                        />
                      </div>

                      <!-- Description -->
                      <div class="form-group mb-3">
                        <label class="form-label" for="description"
                          >PROPERTY DESCRIPTION</label
                        >
                        <textarea
                          class="form-control"
                          id="description"
                          name="description"
                          rows="4"
                          placeholder="Enter property description"
                          required
                        ></textarea>
                      </div>

                      <!-- File Input -->
                      <div class="form-group mb-3">
                        <label class="form-label" for="files"
                          >UPLOAD IMAGES</label
                        >
                        <input
                          type="file"
                          class="form-control"
                          id="files"
                          name="files"
                          accept="image/*"
                          multiple
                          required
                        />
                      </div>

                      <!-- Upload Button -->
                      <div class="text-center">
                        <button
                          type="submit"
                          class="btn btn-primary waves-effect waves-light"
                        >
                          Upload
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- End Row -->
          </div>
          <!-- End container -->
        </div>
      </div>
    </div>
  </body>
</html>
