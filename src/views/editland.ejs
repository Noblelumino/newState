<% include layouts/adminLayout %> <!-- Optional layout inclusion -->

<h1>Edit Property</h1>

<form action="/land/<%= property._id %>/edit" method="POST">
  <!-- Property Name -->
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= property.name %>" required />
  </div>

  <!-- Address -->
  <div>
    <label for="address">Address:</label>
    <input type="text" id="address" name="address" value="<%= property.address %>" required />
  </div>

  <!-- Price -->
  <div>
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="<%= property.price %>" required />
  </div>

  <!-- Description -->
  <div>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= property.description %></textarea>
  </div>

  <!-- Submit Button -->
  <div>
    <button type="submit">Save Changes</button>
  </div>
</form>
